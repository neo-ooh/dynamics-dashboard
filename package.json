{
  "name": "dynamics-dashboard",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "axios": "^0.19.2",
    "babel-plugin-react-intl": "^7.5.28",
    "browserslist": "^4.13.0",
    "copy-to-clipboard": "^3.3.1",
    "node-sass": "^7.0.0",
    "react": "^16.13.1",
    "react-app-polyfill": "^1.0.6",
    "react-cookie": "^4.0.3",
    "react-datepicker": "^3.1.3",
    "react-dom": "^16.13.1",
    "react-dropzone": "^11.0.1",
    "react-intl": "^5.0.2",
    "react-intl-po": "^2.2.2",
    "react-intl.macro": "*",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^3.4.1",
    "react-transition-group": "^4.4.1",
    "uuid": "^8.2.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "compile-translations": "rip po2json './translation/*.po' -m './messages/src/**/*.json' -o './src/assets/locales'",
    "extract:messages": "MESSAGE_DIR='./messages' react-scripts build && node ./translationRunner.js",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "babel": {
    "presets": [
      "react-app"
    ],
    "plugins": [
      [
        "react-intl",
        {
          "messagesDir": "./messages/"
        }
      ]
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "resolver": "jest-pnp-resolver",
    "setupFiles": [
      "react-app-polyfill/jsdom"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx}",
      "<rootDir>/src/**/?(*.)(spec|test).{js,jsx}"
    ],
    "testEnvironment": "jsdom",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$",
      "^.+\\.module\\.(css|sass|scss)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web",
      "^.+\\.module\\.(css|sass|scss)$": "identity-obj-proxy"
    },
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ]
  },
  "devDependencies": {
    "react-intl-translations-manager": "^5.0.3"
  }
}
